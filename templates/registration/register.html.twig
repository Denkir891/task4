{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container center-container">
    <div class="card w-100" style="max-width: 400px;">
        <div class="card-body">
            
            <h1 class="h3 text-center mb-4">Create Account</h1>

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:" xmlns="http://www.w3.org/2000/svg">
                        <use xlink:href="#exclamation-triangle-fill"/>
                    </svg>
                    <div>
                        {{ message }}
                    </div>
                </div>
            {% endfor %}
            {{ form_start(registrationForm) }}
                <div class="form-group mb-3">
                    {{ form_widget(registrationForm.name, { 'attr': {'class': 'form-control right-align'} }) }}
                    <label for="{{ registrationForm.name.vars.id }}" class="label-left">Full Name</label>
                </div>

                <div class="form-group mb-3">
                    {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control right-align'} }) }}
                    <label for="{{ registrationForm.email.vars.id }}" class="label-left">Email Address</label>
                </div>

                <div class="form-group mb-3">
                    {{ form_widget(registrationForm.password, { 'attr': {'class': 'form-control right-align'} }) }}
                    <label for="{{ registrationForm.password.vars.id }}" class="label-left">Password</label>
                </div>

                <button class="btn btn-primary w-100" type="submit">Register</button>
            {{ form_end(registrationForm) }}

            <div class="mt-3 text-center">
                <p>Already have an account? <a href="{{ path('app_login') }}">Login</a>.</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}








