{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">

    <!-- Contenedor de notificaciones flotantes -->
    <div id="toast-container" class="toast-container position-fixed top-0 end-0 p-3"></div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>User Management</h2>
    </div>

    <div class="btn-group mb-3">
        <a href="{{ path('app_logout') }}" class="btn btn-secondary">Logout</a>
        <button class="btn btn-danger" id="delete-users">Delete</button>
        <button class="btn btn-warning" id="block-users">Block</button>
        <button class="btn btn-success" id="unblock-users">Unblock</button>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped text-center">
            <thead class="table-dark">
                <tr>
                    <th><input type="checkbox" id="select-all"></th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Last Login</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr data-id="{{ user.id }}">
                    <td><input type="checkbox" class="user-checkbox"></td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i') : 'Never' }}</td>
                    <td>{{ user.status }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<!-- Pasar mensajes flash a JavaScript -->
<div id="success-toast" class="toast align-items-center text-white bg-success position-fixed top-0 end-0 m-3" role="alert" aria-live="assertive" aria-atomic="true" style="display: none;">
    <div class="d-flex">
        <div class="toast-body">✅ Operación realizada con éxito.</div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
    </div>
</div>

<!-- Enlazar tu archivo JavaScript -->
<script src="{{ asset('js/main.js') }}"></script>
{% endblock %}








